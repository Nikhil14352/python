def clac(a,b,c):
    sum=a+b+c
    sub=a-b-c
    mul=a*b*c
    div=a/b
    return("sum:",sum,"sub:",sub,"mul:",mul,"div:",div)
a=int(input("enter any number:"))
b=int(input("enter any number:"))
c=int(input("enter any number:"))
d=clac(a,b,c)
print(d)

